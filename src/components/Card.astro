---
interface Props {
    href: string;
    title: string;
    author: string;
    img: string;
}

const { href, title, author, img } = Astro.props;
---

<li class="link-card">
    <a href={href}>
        <div class="image-container">
            <img class="image" src={img} alt="Title-card-not-found" />
        </div>
        <div class="card-content">
            <h2 class="card-title">
                {title}
            </h2>
            <span class="card-author">
                By {author}
            </span>
        </div>
    </a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        padding: 0;
        background-color: #23262d;
        border-radius: 12px;
        box-shadow: 
            0 4px 6px -1px rgba(0, 0, 0, 0.3),
            0 2px 4px -1px rgba(0, 0, 0, 0.2),
            inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        width: 100%;
        min-width: 12rem;
        max-width: 20rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        height: auto;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .link-card:hover {
        transform: translateY(-4px);
        box-shadow: 
            0 10px 25px -5px rgba(0, 0, 0, 0.4),
            0 6px 10px -2px rgba(0, 0, 0, 0.3),
            inset 0 0 0 1px rgba(255, 255, 255, 0.2);
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 0;
        border-radius: 12px;
        color: white;
        background-color: #23262d;
        display: flex;
        flex-direction: column;
        height: 100%;
        transition: all 0.3s ease;
    }

    .image-container {
        width: 100%;
        height: 180px;
        overflow: hidden;
        position: relative;
    }

    .image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .link-card:hover .image {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.25rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-title {
        margin: 0 0 1rem 0;
        text-align: left;
        font-size: 1.1rem;
        font-weight: 600;
        line-height: 1.3;
        color: white;
        transition: color 0.3s ease;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .link-card:hover .card-title {
        color: rgb(224, 204, 250);
    }

    .card-author {
        font-size: 0.9rem;
        color: #aaa;
        font-weight: 500;
        text-align: left;
        margin-top: auto;
    }
</style>

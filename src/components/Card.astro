---
interface Props {
    href: string;
    title: string;
    author: string;
    img: string;
    isActive?: boolean;
}

const { href, title, author, img, isActive = false } = Astro.props;

const authors = [
    {
        name: "Eli Newlin",
        profile_pic_uri: "https://avatars.githubusercontent.com/u/43016438?v=4",
    },
    {
        name: "Seth Traman",
        profile_pic_uri: "https://avatars.githubusercontent.com/u/11356884?v=4",
    },
];

const authorData = authors.find(a => a.name === author);
const isCombinedAuthors = author === "Eli Newlin & Seth Traman";
---

<li class={`link-card ${isActive ? 'active' : ''}`}>
    <a href={href}>
        <div class="image-container">
            <img class="image" src={img} alt="Title-card-not-found" />
        </div>
        <div class="card-content">
            <h2 class="card-title">
                {title}
            </h2>
            <div class="card-author">
                {isCombinedAuthors ? (
                    <div class="author-pics-combined">
                        {authors.map((authorInfo) => (
                            <img class="author-profile-pic" src={authorInfo.profile_pic_uri} alt={authorInfo.name} />
                        ))}
                    </div>
                ) : (
                    authorData && (
                        <img class="author-profile-pic" src={authorData.profile_pic_uri} alt={author} />
                    )
                )}
                <span>By {author}</span>
            </div>
        </div>
    </a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        padding: 0;
        background-color: #23262d;
        border-radius: 12px;
        box-shadow: 
            0 4px 6px -1px rgba(0, 0, 0, 0.3),
            0 2px 4px -1px rgba(0, 0, 0, 0.2),
            inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        width: 100%;
        min-width: 12rem;
        max-width: 20rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        height: auto;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .link-card:hover {
        transform: translateY(-4px);
        box-shadow: 
            0 10px 25px -5px rgba(0, 0, 0, 0.4),
            0 6px 10px -2px rgba(0, 0, 0, 0.3),
            inset 0 0 0 1px rgba(255, 255, 255, 0.2);
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 0;
        border-radius: 12px;
        color: white;
        background-color: #23262d;
        display: flex;
        flex-direction: column;
        height: 100%;
        transition: all 0.3s ease;
    }

    .image-container {
        width: 100%;
        height: 180px;
        overflow: hidden;
        position: relative;
    }

    .image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .link-card:hover .image {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.25rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-title {
        margin: 0 0 1rem 0;
        text-align: left;
        font-size: 1.1rem;
        font-weight: 600;
        line-height: 1.3;
        color: white;
        transition: color 0.3s ease;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .link-card:hover .card-title {
        color: rgb(224, 204, 250);
    }

    .card-author {
        font-size: 0.9rem;
        color: #aaa;
        font-weight: 500;
        text-align: left;
        margin-top: auto;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .author-profile-pic {
        width: 1.5rem;
        height: 1.5rem;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.2);
    }

    .author-pics-combined {
        display: flex;
        gap: 0.25rem;
    }

    .author-pics-combined .author-profile-pic {
        width: 1.25rem;
        height: 1.25rem;
    }

    .link-card.active {
        transform: translateY(-4px);
        box-shadow: 
            0 10px 25px -5px rgba(136, 58, 234, 0.4),
            0 6px 10px -2px rgba(136, 58, 234, 0.3),
            inset 0 0 0 2px rgba(136, 58, 234, 0.5);
    }

    .link-card.active .card-title {
        color: rgb(224, 204, 250);
    }
</style>

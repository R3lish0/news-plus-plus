---
interface Props {
    variant?: 'mobile' | 'desktop-sticky';
    showLatestArticles?: boolean;
}

const { variant = 'mobile', showLatestArticles = true } = Astro.props;
---

<header class={`site-header site-header--${variant}`}>
    <div class="header-content">
        <a class="brand-link" href={`${import.meta.env.BASE_URL}`}>
            <img src="/src/components/images/favicon.png" alt="news++ logo" class="brand-logo" />
        </a>
        {variant === 'mobile' && showLatestArticles && (
            <span class="latest-articles-text" id="latest-articles-text">Latest Articles</span>
        )}
        {variant === 'mobile' && (
            <a class="scroll-link" id="scroll-to-top">
                <svg class="scroll-arrow" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7 15L12 10L17 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </a>
        )}
    </div>
</header>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Libre+Barcode+128+Text&display=swap");

    .site-header {
        width: 100%;
        color: white;
    }

    /* Mobile Header Styles */
    .site-header--mobile {
        padding: 3rem 0;
        margin: 1rem auto;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 95%;
    }

    .site-header--mobile .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        max-width: 120rem;
        position: relative;
        padding: 0 2rem;
    }

    .site-header--mobile .brand-link {
        font-size: 6rem;
        color: #ddd;
        text-decoration: none;
        letter-spacing: normal;
        font-weight: 800;
        white-space: nowrap;
        transition: letter-spacing 1s ease-in-out, color 1s ease-in-out;
        font-family: "Libre Barcode 128 Text", system-ui;
        flex-shrink: 0;
    }

    .site-header--mobile .brand-link:hover {
        color: white;
        letter-spacing: 0.2em;
    }

    .latest-articles-text {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-left: 2rem;
        flex: 1;
        transition: opacity 0.3s ease-in-out;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .scroll-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        background: rgba(136, 58, 234, 0.2);
        border: 2px solid rgba(136, 58, 234, 0.4);
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        flex-shrink: 0;
    }

    .scroll-link:hover {
        background: rgba(136, 58, 234, 0.4);
        border-color: rgba(136, 58, 234, 0.8);
        color: white;
        transform: translateY(-2px);
    }

    .scroll-arrow {
        width: 1.5rem;
        height: 1.5rem;
    }

    .brand-logo {
        height: 3rem;
        width: 4rem;
        object-fit: cover;
        transform: scale(1.5);
        margin-left: -1rem;
        image-rendering: -webkit-optimize-contrast;
    }

    .site-header--mobile .brand-link {
        font-size: inherit;
        letter-spacing: inherit;
        font-weight: inherit;
        font-family: inherit;
    }

    .site-header--desktop-sticky .brand-link {
        font-family: inherit;
        font-size: inherit;
        letter-spacing: inherit;
    }

    /* Desktop Sticky Header Styles */
    .site-header--desktop-sticky {
        position: sticky;
        top: 0;
        left: 0;
        z-index: 100;
        background: rgba(19, 21, 26, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: none;
        padding: 2rem 0;
    }

    @media (min-width: 1201px) {
        .site-header--desktop-sticky {
            display: block;
        }
    }

    .site-header--desktop-sticky .header-content {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 4rem;
    }

    .site-header--desktop-sticky .brand-link {
        font-family: "Libre Barcode 128 Text", system-ui;
        font-size: 4rem;
        color: #ddd;
        text-decoration: none;
        font-weight: 800;
        transition: color 0.3s ease, letter-spacing 0.3s ease;
    }

    .site-header--desktop-sticky .brand-link:hover {
        color: white;
        letter-spacing: 0.1em;
    }

    /* Hide mobile version on desktop */
    @media (min-width: 1201px) {
        .site-header--mobile {
            display: none;
        }
    }

    /* Mobile sticky header for single-column layouts */
    @media (max-width: 1200px) {
        .site-header--mobile {
            position: sticky;
            top: 0;
            left: 0;
            z-index: 100;
            background: rgba(19, 21, 26, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.5rem 0;
            margin-top: 0;
        }
        
        .site-header--mobile .brand-link {
            font-size: 5rem;
        }
        
        .latest-articles-text {
            font-size: 2rem;
        }
    }

    /* Mobile responsive adjustments */
    @media (max-width: 900px) {
        .site-header--mobile .brand-link {
            font-size: 4rem;
        }
        
        .latest-articles-text {
            font-size: 1.8rem;
            margin-left: 1.5rem;
        }
        
        .scroll-link {
            width: 2.5rem;
            height: 2.5rem;
        }
        
        .scroll-arrow {
            width: 1.25rem;
            height: 1.25rem;
        }
    }

    @media (max-width: 600px) {
        .site-header--mobile .brand-link {
            font-size: 3rem;
        }
        
        .latest-articles-text {
            font-size: 1.5rem;
            margin-left: 1rem;
        }
        
        .scroll-link {
            width: 2rem;
            height: 2rem;
        }
        
        .scroll-arrow {
            width: 1rem;
            height: 1rem;
        }
        
        .site-header--mobile .header-content {
            padding: 0 2rem;
        }
    }

    @media (min-width: 1201px) {
        .brand-logo {
            transform: scale(2);
        }
    }
</style>

<script>
    const scrollToTop = document.getElementById('scroll-to-top');
    if (scrollToTop) {
        scrollToTop.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    }
</script>
---
interface Props {
    variant?: 'mobile' | 'desktop-sticky';
}

const { variant = 'mobile' } = Astro.props;
---

<header class={`site-header site-header--${variant}`}>
    <div class="header-content">
        <a class="brand-link" href={`${import.meta.env.BASE_URL}`}>news++</a>
        {variant === 'mobile' && (
            <a class="scroll-link" href="#article-grid">
                <svg class="scroll-arrow" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7 10L12 15L17 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </a>
        )}
    </div>
</header>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Libre+Barcode+128+Text&display=swap");

    .site-header {
        width: 100%;
        color: white;
    }

    /* Mobile Header Styles */
    .site-header--mobile {
        padding: 3rem 0;
        margin-top: 1rem;
        border-radius: 6px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .site-header--mobile .header-content {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        position: relative;
    }

    .site-header--mobile .brand-link {
        font-size: 8rem;
        color: #ddd;
        text-decoration: none;
        letter-spacing: normal;
        font-weight: 800;
        white-space: nowrap;
        transition: letter-spacing 1s ease-in-out, color 1s ease-in-out;
        font-family: "Libre Barcode 128 Text", system-ui;
    }

    .site-header--mobile .brand-link:hover {
        color: white;
        letter-spacing: 0.2em;
    }

    .scroll-link {
        position: absolute;
        right: 2rem;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        background: rgba(136, 58, 234, 0.2);
        border: 2px solid rgba(136, 58, 234, 0.4);
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .scroll-link:hover {
        background: rgba(136, 58, 234, 0.4);
        border-color: rgba(136, 58, 234, 0.8);
        color: white;
        transform: translateY(-50%) translateY(-2px);
    }

    .scroll-arrow {
        width: 1.5rem;
        height: 1.5rem;
    }

    /* Desktop Sticky Header Styles */
    .site-header--desktop-sticky {
        position: sticky;
        top: 0;
        left: 0;
        z-index: 100;
        background: rgba(19, 21, 26, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: none;
        padding: 2rem 0;
    }

    @media (min-width: 1201px) {
        .site-header--desktop-sticky {
            display: block;
        }
    }

    .site-header--desktop-sticky .header-content {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 2rem;
    }

    .site-header--desktop-sticky .brand-link {
        font-family: "Libre Barcode 128 Text", system-ui;
        font-size: 4rem;
        color: #ddd;
        text-decoration: none;
        font-weight: 800;
        transition: color 0.3s ease, letter-spacing 0.3s ease;
    }

    .site-header--desktop-sticky .brand-link:hover {
        color: white;
        letter-spacing: 0.1em;
    }

    /* Hide mobile version on desktop */
    @media (min-width: 1201px) {
        .site-header--mobile {
            display: none;
        }
    }

    /* Mobile sticky header for single-column layouts */
    @media (max-width: 1200px) {
        .site-header--mobile {
            position: sticky;
            top: 0;
            left: 0;
            z-index: 100;
            background: rgba(19, 21, 26, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.5rem 0;
            margin-top: 0;
        }
        
        .site-header--mobile .brand-link {
            font-size: 6rem;
        }
    }

    /* Mobile responsive adjustments */
    @media (max-width: 900px) {
        .site-header--mobile .brand-link {
            font-size: 5rem;
        }
        
        .scroll-link {
            right: 1.5rem;
            width: 2.5rem;
            height: 2.5rem;
        }
        
        .scroll-arrow {
            width: 1.25rem;
            height: 1.25rem;
        }
    }

    @media (max-width: 600px) {
        .site-header--mobile .brand-link {
            font-size: 3.5rem;
        }
        
        .scroll-link {
            right: 1rem;
            width: 2rem;
            height: 2rem;
        }
        
        .scroll-arrow {
            width: 1rem;
            height: 1rem;
        }
    }
</style>
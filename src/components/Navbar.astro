---
interface Author {
    name: string;
    github_uri: string;
    profile_pic_uri: string;
}

interface Props {
    title: string;
    authors: Author[];
}

const { title: content, authors } = Astro.props;
---

<nav class="navbar">
    <div class="navbar-section">
        <a class="navbar-link navbar-link-home" href={`${import.meta.env.BASE_URL}`}
            >{content}</a
        >
    </div>
    <div class="navbar-section">
        <span>by</span>
    </div>
    <div class="author-section">
        {
            authors.map((author) => (
                <a
                    id="container"
                    class="navbar-link navbar-link-author"
                    href={author.github_uri}
                >
                    <img
                        class="navbar-img-author"
                        alt={author.name}
                        src={author.profile_pic_uri}
                    />
                    <p class="navbar-img-caption">{author.name}</p>
                </a>
            ))
        }
    </div>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Libre+Barcode+128+Text&display=swap");

        .navbar {
            width: 100%;
            height: auto;
            margin: auto;
            margin-top: 1rem;
            color: white;
            padding: 1rem 0;
            border-radius: 6px;
            display: flex;
            justify-content: center;
            gap: 1rem;
            align-items: center;
            flex-wrap: nowrap;
            font-weight: 400;
            font-style: normal;
        }

        .navbar-section span {
            color: #aaa;
            visibility: hidden;
        }

        @media only screen and (min-width: 601px) {
            .navbar-section span {
                font-size: 30px;
                padding-inline: 2rem;
                visibility: visible;
            }
        }

        .navbar-link {
            font-size: 5rem;
            color: #ddd;
            text-decoration: none;
            letter-spacing: normal;
            font-weight: 800;
            white-space: nowrap;
            transition:
                letter-spacing 1s ease-in-out,
                color 1s ease-in-out;
        }

        .navbar-link-home:hover {
            color: white;
            letter-spacing: 0.2em;
        }

        .navbar-link-home {
            font-family: "Libre Barcode 128 Text", system-ui;
        }

        .navbar-img-author {
            border-radius: 100%;
            width: 4rem;
            max-width: 5rem;
            height: auto;
            background-color: red;
            border: 5px solid black;
            transition:
                width 0.3s ease-in-out,
                height 0.3s ease-in-out,
                margin 0.3s ease-in-out,
                color 0.3s;
        }

        .navbar-link-author {
            margin: 0;
            transition: margin 0.3s ease-in-out;
        }

        .navbar-link-author:hover {
        }

        .navbar-link-author:hover .navbar-img-author {
            width: 20vw;
            border: 5px solid white;
        }

        .navbar-img-caption {
            font-size: 1rem;
            max-width: 5rem;
            color: white;
            text-align: center;
            font-weight: 400;
            margin-top: -1rem;
            transition:
                font-size 0.3s ease-in-out,
                font-weight 0.3s ease-in-out;
        }

        .navbar-link-author:hover .navbar-img-caption {
            font-size: 1rem;
            font-weight: 800;
        }

        #container {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }

        .author-section {
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
        }

        @media (max-width: 900px) {
            .navbar {
                flex-direction: column;
                width: 100%;
            }
            .author-section {
                width: 80%;
            }
        }
    </style>
</nav>

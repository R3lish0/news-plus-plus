---
interface Author {
	name: string;
	github_uri: string;
	profile_pic_uri: string;
}

interface Props {
	title: string;
	authors: Author[];
}

const { title: content, authors } = Astro.props;
---

<nav class="navbar">
	<div class="navbar-section">
		<a class="navbar-link navbar-link-home" href="/">{content}</a>
	</div>
	<div class="navbar-section">
		<span>by</span>
	</div>
	{
		authors.map((author) => (
			<a class="navbar-link navbar-link-author" href={author.github_uri}>
				<img
					class="navbar-img-author"
					alt={author.name}
					src={author.profile_pic_uri}
				/>
				<p class="navbar-img-caption">{author.name}</p>
			</a>
		))
	}
</nav>
<style>
	@import url("https://fonts.googleapis.com/css2?family=Libre+Barcode+128+Text&display=swap");

	.navbar {
		width: calc(100% - 20em);
		height: 5em;
		color: white;
		padding-top: 4em;
		padding-inline: 10em;
		margin: auto;
		border-radius: 6px;

		display: flex;
		justify-content: center;
		align-items: center;
		flex-wrap: nowrap;

		font-weight: 400;
		font-style: normal;
	}

	.navbar-section {
		/* padding: 1em; */
		/* width: auto; */
		display: flex;
	}

	.navbar-section span {
		font-size: 10px;
		color: #aaa;
		padding-inline: 0;
		visibility: hidden;
	}

	@media only screen and (min-width: 601px) {
		.navbar-section span {
			font-size: 30px;
			padding-inline: 2rem;
			visibility: visible;
		}
	}

	.navbar-link {
		font-size: 5em;
		color: #ddd;
		text-decoration: none;
		letter-spacing: normal;
		font-weight: 800;
		white-space: nowrap;
		transition:
			letter-spacing 1s ease-in-out,
			color 1s ease-in-out;
	}

	.navbar-link-home:hover {
		color: white;
		letter-spacing: 0.2em;
	}

	.navbar-link-home {
		font-family: "Libre Barcode 128 Text", system-ui;
	}

	.navbar-img-author {
		border-radius: 100%;
		width: 4rem;
		height: 4rem;
		background-color: red;
		border: 5px solid black;
		transition:
			width 0.3s ease-in-out,
			height 0.3s ease-in-out,
			margin 0.3s ease-in-out;
	}

	.navbar-link-author {
		margin: 0;
		transition: margin 0.3s ease-in-out;
	}

	.navbar-link-author:hover {
		margin: 1rem;
	}

	.navbar-link-author:hover .navbar-img-author {
		width: 5rem;
		height: 5rem;
	}

	.navbar-img-caption {
		font-size: 0.5rem;
		color: white;
		text-align: center;
		font-weight: 400;
		margin-top: -1rem;
		transition:
			font-size 0.3s ease-in-out,
			font-weight 0.3s ease-in-out;
	}

	@media only screen and (max-width: 600px) {
		.navbar-img-caption {
			visibility: hidden;
		}
	}

	.navbar-link-author:hover .navbar-img-caption {
		font-size: 1rem;
		font-weight: 800;
	}
</style>

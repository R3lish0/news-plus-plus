---
interface Props {
    article: any;
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<article class="component-article-card">
    <div class="article-content">
        <header class="article-header">
            <h1 class="article-title">{article.data.title}</h1>
            <div class="article-meta">
                <span class="article-author">By {article.data.author}</span>
                <time class="article-date" datetime={article.data.date}>{article.data.date}</time>
            </div>
        </header>
        
        <div class="article-text">
            <Content />
        </div>
    </div>
</article>

<style>
/* Clean editorial layout for article content */
.component-article-card {
    display: flex;
    flex-direction: column;
    background: #1a1d23;
    width: 100%;
    height: 100%;
    position: relative;
    max-width: 80rem;
    margin: auto;
}

.article-content {
    padding: 4rem;
    background: #1a1d23;
    line-height: 1.8;
    font-size: 1.125rem;
    color: #e5e7eb;
    flex: 1;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', system-ui, sans-serif;
}

.article-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}


.article-title {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    color: #ffffff;
    letter-spacing: -0.03em;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

.article-meta {
    display: flex;
    gap: 2rem;
    align-items: center;
    font-size: 0.95rem;
    color: #9ca3af;
    font-weight: 500;
}

.article-author {
    color: #e5e7eb;
}

.article-date {
    color: #9ca3af;
}

.article-content p {
    margin-bottom: 1.75rem;
    line-height: 1.8;
    max-width: 65ch;
}

.article-content h1,
.article-content h2,
.article-content h3,
.article-content h4 {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.3;
    margin: 3rem 0 1.5rem 0;
}

.article-content h1 { font-size: 2.25rem; }
.article-content h2 { font-size: 1.875rem; }
.article-content h3 { font-size: 1.5rem; }
.article-content h4 { font-size: 1.25rem; }

.article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
}

.article-content ul,
.article-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
    max-width: 65ch;
}

.article-content li {
    margin-bottom: 0.5rem;
}

.article-content blockquote {
    border-left: 4px solid #6366f1;
    padding-left: 2rem;
    margin: 2rem 0;
    font-style: italic;
    color: #d1d5db;
}

.article-content code {
    background: #374151;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: #f9fafb;
}

.article-content pre {
    background: #374151;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
}

.article-content pre code {
    background: none;
    padding: 0;
}

/* Desktop styles */
@media (min-width: 1201px) {
    .component-article-card {
        height: 100vh;
        display: block;
        background: #1a1d23;
    }

    .article-content {
        height: 100vh;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: #6366f1 #374151;
    }

    .article-content::-webkit-scrollbar {
        width: 8px;
    }

    .article-content::-webkit-scrollbar-track {
        background: #374151;
        border-radius: 4px;
    }

    .article-content::-webkit-scrollbar-thumb {
        background: #6366f1;
        border-radius: 4px;
    }

    .article-content::-webkit-scrollbar-thumb:hover {
        background: #4f46e5;
    }
}

/* Mobile responsive */
@media (max-width: 1200px) {
    .article-header {
        padding: 2rem;
    }
    
    .article-title {
        font-size: 2.25rem;
    }
    
    .article-content {
        padding: 2rem;
        font-size: 1.0625rem;
    }
}
</style>

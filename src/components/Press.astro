---
interface Props {
    article: any;
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<div >
    <div class="link-card" style="max-width:80rem; margin:auto;">
        <div style="overflow-x: hidden" class="card-container">
            <div class="article-header">
                <h2 class="article-title">{article.data.title}</h2>
                <div class="article-meta">
                    <div class="latest-badge">Latest Article</div>
                    <span class="author">By {article.data.author}</span>
                    <span class="date">{article.data.date}</span>
                </div>
            </div>
            <div id="slot">
                <span>
                    <Content />
                </span>
            </div>
        </div>
    </div>
</div>
<style>
    .image {
        height: auto;
        padding: 0;
        border-radius: 7px;
        margin: auto;
    }

    .link-card {
        display: flex;
        justify-content: center;
        background: linear-gradient(135deg, #23262d 0%, #1a1d23 100%);
        border-radius: 12px;
        box-shadow: 
            inset 0 0 0 1px rgba(255, 255, 255, 0.1),
            0 8px 32px rgba(0, 0, 0, 0.3);
        width: 100%;
        height: 100%;
        min-height: 60vh;
        max-height: 80vh;
        overflow-y: auto;
        position: relative;
    }

    .link-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, transparent, rgb(136, 58, 234), transparent);
        border-radius: 12px 12px 0 0;
    }

    @media (min-width: 1201px) {
        .link-card {
            min-height: 100vh;
            max-height: 100vh;
            border-radius: 0;
            margin: 0;
        }
    }

    /* Large screen optimizations for fullscreen/ultra-wide displays */
    @media (min-width: 1201px) and (min-height: 900px) {
        #slot {
            padding: 2.5rem;
        }

        #slot h1, #slot h2, #slot h3, #slot h4 {
            margin: 1.5rem 0 0.75rem 0;
        }

        #slot p {
            margin-bottom: 1.25rem;
        }

        .card-container {
            padding-bottom: 2rem !important;
        }
    }

    /* Extra large screen optimizations */
    @media (min-width: 1201px) and (min-height: 1200px) {
        .card-container {
            padding-bottom: 2rem;
        }
    }
    .card-container {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 0;
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
        display: flex;
        flex-direction: column;
    }
    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    #article {
        background-color: #23262d;
        border-radius: 7px;
        background-position: 100%;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        width: 60%;
        min-width: 16rem;
        max-width: 50rem;
        margin-top: 5rem;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 1rem;
        height: auto;
        color: white;
    }

    img {
        width: 100%;
        height: auto;
        border-radius: 7px 7px 0 0;
    }

    #slot {
        margin: 0 2rem;
        padding: 2rem;
        border-radius: 12px;
        background: linear-gradient(145deg, #13151a 0%, #0f1117 100%);
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
        overflow-y: auto;
        line-height: 1.7;
        font-size: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    #slot::-webkit-scrollbar {
        width: 12px;
        -webkit-appearance: none;
    }

    #slot::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
        margin: 1rem 0;
    }

    #slot::-webkit-scrollbar-thumb {
        background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
        border-radius: 6px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        min-height: 30px;
    }

    #slot::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(45deg, rgb(156, 78, 254), rgb(244, 224, 255));
        box-shadow: 0 0 8px rgba(136, 58, 234, 0.3);
    }

    /* Firefox scrollbar styling */
    #slot {
        scrollbar-width: thin;
        scrollbar-color: rgb(136, 58, 234) rgba(255, 255, 255, 0.05);
    }



    #slot span {
        word-wrap: break-word;
        display: block;
        line-height: inherit;
        flex: 1;
    }

    #slot p {
        margin-bottom: 1.5rem;
        line-height: 1.7;
    }

    #slot h1, #slot h2, #slot h3, #slot h4 {
        margin: 2rem 0 1rem 0;
        line-height: 1.4;
    }



    .press-heading {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 2rem;
        margin-top: 0;
        color: white;
    }

    .article-header {
        padding: 2rem 2rem 1.5rem 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 1rem;
        position: relative;
    }

    .article-title {
        font-size: 2.2rem;
        font-weight: 700;
        line-height: 1.3;
        margin: 0 0 1.5rem 0;
        color: white;
        letter-spacing: -0.02em;
    }

    .article-meta {
        display: flex;
        gap: 1.5rem;
        align-items: center;
        font-size: 1rem;
        color: #ccc;
        margin-top: 0.5rem;
    }

    .author {
        font-weight: 500;
    }

    .date {
        opacity: 0.8;
    }

    .article-meta::before {
        content: '';
        display: block;
        width: 30px;
        height: 2px;
        background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
        margin-right: 0.5rem;
    }

    .latest-badge {
        display: none;
    }

    @media (min-width: 1201px) {
        .latest-badge {
            display: inline-block;
            background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.4rem 0.8rem;
            border-radius: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(136, 58, 234, 0.3);
            margin-right: 1rem;
            vertical-align: middle;
        }
    }
</style>

---
interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
}


const { href, title, body, img} = Astro.props;


---

<li class="link-card">
	<a href={href}>
        <img class="image" src={img} alt="Title-card-not-found">
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>

    .image {
        max-width: 100%;
        height:auto;
        margin:auto;
    }



	.link-card {
		list-style: none;
		display: flex;
        justify-content: center;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		width:100%;
        min-height:30rem;
        max-height:50rem;
        overflow-y:auto;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
        display:flex;
        flex-direction: column;

	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}


</style>

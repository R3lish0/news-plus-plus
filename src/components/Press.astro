---
import { getCollection } from "astro:content";

const allArticles = await getCollection("article");
const mostRecentArticle = allArticles.reduce((latest, current) => {
  const currentDate = new Date(current.data.date);
  const latestDate = new Date(latest.data.date);
  return currentDate > latestDate ? current : latest;
}, allArticles[0]);


const article = mostRecentArticle;

const { Content } = await article.render();
---

<div >
    <div class="link-card" style="max-width:80rem; margin:auto;">
        <div style="overflow-x: hidden" class="card-container">
            <div class="article-header">
                <h2 class="article-title">{article.data.title}</h2>
                <div class="article-meta">
                    <div class="latest-badge">Latest Article</div>
                    <span class="author">By {article.data.author}</span>
                    <span class="date">{article.data.date}</span>
                </div>
            </div>
            <div id="slot">
                <div class="preview-label">Preview</div>
                <span>
                    <Content />
                </span>
            </div>
            <button id="read-more">
                <a href={`${import.meta.env.BASE_URL}posts/${article.slug}`}>
                    Read More
                </a>
            </button>
        </div>
    </div>
</div>
<style>
    .image {
        height: auto;
        padding: 0;
        border-radius: 7px;
        margin: auto;
    }

    .link-card {
        display: flex;
        justify-content: center;
        background: linear-gradient(135deg, #23262d 0%, #1a1d23 100%);
        border-radius: 12px;
        box-shadow: 
            inset 0 0 0 1px rgba(255, 255, 255, 0.1),
            0 8px 32px rgba(0, 0, 0, 0.3);
        width: 100%;
        height: 100%;
        min-height: 60vh;
        max-height: 80vh;
        overflow-y: auto;
        position: relative;
    }

    .link-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, transparent, rgb(136, 58, 234), transparent);
        border-radius: 12px 12px 0 0;
    }

    @media (min-width: 1201px) {
        .link-card {
            min-height: 100vh;
            max-height: 100vh;
            border-radius: 0;
            margin: 0;
        }
    }

    /* Large screen optimizations for fullscreen/ultra-wide displays */
    @media (min-width: 1201px) and (min-height: 900px) {
        #slot {
            max-height: 50rem;
            padding: 2.5rem;
        }

        #read-more {
            margin: 1.5rem auto 0rem auto;
        }

        #slot h1, #slot h2, #slot h3, #slot h4 {
            margin: 1.5rem 0 0.75rem 0;
        }

        #slot p {
            margin-bottom: 1.25rem;
        }

        .card-container {
            padding-bottom: 0 !important;
        }
    }

    /* Extra large screen optimizations */
    @media (min-width: 1201px) and (min-height: 1200px) {
        #slot {
            max-height: 60rem;
        }

        #read-more {
            margin: 1rem auto 0rem auto;
        }

        .card-container {
            padding-bottom: 0;
        }
    }
    .card-container {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 0;
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
        display: flex;
        flex-direction: column;
    }
    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    #article {
        background-color: #23262d;
        border-radius: 7px;
        background-position: 100%;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        width: 60%;
        min-width: 16rem;
        max-width: 50rem;
        margin-top: 5rem;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 1rem;
        height: auto;
        color: white;
    }

    img {
        width: 100%;
        height: auto;
        border-radius: 7px 7px 0 0;
    }

    #slot {
        margin: 0 2rem;
        padding: 2rem;
        border-radius: 12px;
        background: linear-gradient(145deg, #13151a 0%, #0f1117 100%);
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
        max-height: 40rem;
        overflow: hidden;
        line-height: 1.7;
        font-size: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
    }

    #slot::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 80px;
        background: linear-gradient(transparent, #13151a 70%, #13151a);
        pointer-events: none;
        border-radius: 0 0 12px 12px;
    }

    .preview-label {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(136, 58, 234, 0.15);
        color: rgba(136, 58, 234, 0.8);
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: 1px solid rgba(136, 58, 234, 0.3);
        backdrop-filter: blur(4px);
        z-index: 1;
    }

    #slot span {
        word-wrap: break-word;
        display: block;
        line-height: inherit;
    }

    #slot p {
        margin-bottom: 1.5rem;
        line-height: 1.7;
    }

    #slot h1, #slot h2, #slot h3, #slot h4 {
        margin: 2rem 0 1rem 0;
        line-height: 1.4;
    }

    #read-more {
        width: 60%;
        min-width: 12rem;
        max-width: 20rem;
        margin: 2rem auto 2rem auto;
        background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
        border-radius: 12px;
        border: none;
        box-shadow: 0 4px 15px rgba(136, 58, 234, 0.3);
        transition: all 0.3s ease;
        cursor: pointer;
        padding: 0;
        height: auto;
        display: flex;
    }

    #read-more:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(136, 58, 234, 0.4);
    }

    #read-more > a {
        display: flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: white;
        width: 100%;
        padding: 1rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        border-radius: 12px;
        min-height: 48px;
        box-sizing: border-box;
    }


    .press-heading {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 2rem;
        margin-top: 0;
        color: white;
    }

    .article-header {
        padding: 2rem 2rem 1.5rem 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 1rem;
        position: relative;
    }

    .article-title {
        font-size: 2.2rem;
        font-weight: 700;
        line-height: 1.3;
        margin: 0 0 1.5rem 0;
        color: white;
        letter-spacing: -0.02em;
    }

    .article-meta {
        display: flex;
        gap: 1.5rem;
        align-items: center;
        font-size: 1rem;
        color: #ccc;
        margin-top: 0.5rem;
    }

    .author {
        font-weight: 500;
    }

    .date {
        opacity: 0.8;
    }

    .article-meta::before {
        content: '';
        display: block;
        width: 30px;
        height: 2px;
        background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
        margin-right: 0.5rem;
    }

    .latest-badge {
        display: none;
    }

    @media (min-width: 1201px) {
        .latest-badge {
            display: inline-block;
            background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.4rem 0.8rem;
            border-radius: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(136, 58, 234, 0.3);
            margin-right: 1rem;
            vertical-align: middle;
        }
    }
</style>

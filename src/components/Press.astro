---
interface Props {
    article: any;
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<article class="component-article-card">
    <header class="article-header">
        <h1 class="article-title">{article.data.title}</h1>
        <div class="article-meta">
            <div class="article-badge">Latest Article</div>
            <span class="article-author">By {article.data.author}</span>
            <time class="article-date" datetime={article.data.date}>{article.data.date}</time>
        </div>
    </header>
    
    <div class="article-content">
        <div class="article-text">
            <Content />
        </div>
    </div>
</article>

<style>
/* Base component styles */
.component-article-card {
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, #23262d 0%, #1a1d23 100%);
    border-radius: 12px;
    box-shadow: 
        inset 0 0 0 1px rgba(255, 255, 255, 0.1),
        0 8px 32px rgba(0, 0, 0, 0.3);
    width: 100%;
    height: 100%;
    position: relative;
    max-width: 80rem;
    margin: auto;
}

.component-article-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgb(136, 58, 234), transparent);
    border-radius: 12px 12px 0 0;
}

.article-header {
    padding: 2rem 2rem 1.5rem 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 1rem;
    position: relative;
    flex-shrink: 0;
}

.article-title {
    font-size: 2.2rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 1.5rem 0;
    color: white;
    letter-spacing: -0.02em;
}

.article-meta {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    font-size: 1rem;
    color: #ccc;
    margin-top: 0.5rem;
}

.article-meta::before {
    content: '';
    display: block;
    width: 30px;
    height: 2px;
    background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
    margin-right: 0.5rem;
}

.article-author {
    font-weight: 500;
}

.article-date {
    opacity: 0.8;
}

.article-badge {
    display: none;
}

.article-content {
    margin: 0 2rem;
    padding: 2rem;
    border-radius: 12px;
    background: linear-gradient(145deg, #13151a 0%, #0f1117 100%);
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
    line-height: 1.7;
    font-size: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    flex: 1;
    max-width: 100%;
    overflow-y: auto;
    min-height: 0;
}

.article-content p {
    margin-bottom: 1.5rem;
    line-height: 1.7;
    word-wrap: break-word;
}

.article-content h1, 
.article-content h2, 
.article-content h3, 
.article-content h4 {
    margin: 2rem 0 1rem 0;
    line-height: 1.4;
}

.article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 7px;
    border: 3px solid #444;
}

/* Desktop styles */
@media (min-width: 1201px) {
    .component-article-card {
        border-radius: 0;
        margin: 0;
        height: 100vh;
        display: block;
    }

    .article-badge {
        display: inline-block;
        background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
        color: white;
        font-size: 0.75rem;
        font-weight: 600;
        padding: 0.4rem 0.8rem;
        border-radius: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 8px rgba(136, 58, 234, 0.3);
        margin-right: 1rem;
        vertical-align: middle;
    }

    .article-content {
        height: calc(100vh - 200px);
        overflow-y: scroll;
        max-height: calc(100vh - 200px);
        scrollbar-width: thin;
        scrollbar-color: rgb(136, 58, 234) rgba(255, 255, 255, 0.05);
    }

    .article-content::-webkit-scrollbar {
        width: 12px;
        -webkit-appearance: none;
    }

    .article-content::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
        margin: 1rem 0;
    }

    .article-content::-webkit-scrollbar-thumb {
        background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
        border-radius: 6px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        min-height: 30px;
    }

    .article-content::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(45deg, rgb(156, 78, 254), rgb(244, 224, 255));
        box-shadow: 0 0 8px rgba(136, 58, 234, 0.3);
    }
}
</style>

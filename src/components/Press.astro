}

.article-hero {
    width: 100%;
    margin: 0;
    padding: 0;
    position: relative;
}

.article-cover {
    width: 100%;
    height: auto;
    display: block;
    margin-top: 0;
    max-height: calc(61.8vh + 2rem);
    object-fit: cover;
}

.article-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60%;
    background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.6) 50%, rgba(0,0,0,0.2) 80%, transparent 100%);

        max-height: calc(65vh + 2rem);
    }
    .zigzag-cutter {
        clip-path: polygon(0% 100%, 12.5% 0%, 25% 100%, 37.5% 0%, 50% 100%, 62.5% 0%, 75% 100%, 87.5% 0%, 100% 100%, 100% 100%, 0% 100%);
    }
}


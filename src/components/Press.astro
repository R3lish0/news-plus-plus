---
import { getCollection } from "astro:content";

const allArticles = await getCollection("article");
const mostRecentArticle = allArticles.reduce((latest, current) => {
  const currentDate = new Date(current.data.date);
  const latestDate = new Date(latest.data.date);
  return currentDate > latestDate ? current : latest;
}, allArticles[0]);


const article = mostRecentArticle;

const { Content } = await article.render();
---

<div >
    <div class="link-card" style="max-width:80rem; margin:auto;">
        <div style="overflow-x: hidden" class="card-container">
            <div class="article-header">
                <h2 class="article-title">{article.data.title}</h2>
                <div class="article-meta">
                    <span class="author">By {article.data.author}</span>
                    <span class="date">{article.data.date}</span>
                </div>
            </div>
            <div id="slot">
                <span>
                    <Content />
                </span>
            </div>
            <button id="read-more">
                <a href={`${import.meta.env.BASE_URL}posts/${article.slug}`}>
                    <h3>Read More</h3>
                </a>
            </button>
        </div>
    </div>
</div>
<style>
    .image {
        height: auto;
        padding: 0;
        border-radius: 7px;
        margin: auto;
    }

    .link-card {
        display: flex;
        justify-content: center;
        background-color: #23262d;
        border-radius: 7px;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        width: 100%;
        height: 100%;
        min-height: 60vh;
        max-height: 80vh;
        overflow-y: auto;
    }
    .card-container {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 0;
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
        display: flex;
        flex-direction: column;
    }
    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    #article {
        background-color: #23262d;
        border-radius: 7px;
        background-position: 100%;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        width: 60%;
        min-width: 16rem;
        max-width: 50rem;
        margin-top: 5rem;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 1rem;
        height: auto;
        color: white;
    }

    img {
        width: 100%;
        height: auto;
        border-radius: 7px 7px 0 0;
    }

    #slot {
        margin: 0 1.25rem;
        padding: 0.75rem;
        border-radius: 7px;
        background-color: #13151a;
        max-height: 40rem;
        overflow: hidden;
    }

    #slot span {
        word-wrap: break-word;
    }

    #read-more {
        width: 30%;
        min-width: 8rem;
        margin: 1.5rem auto 1rem auto;
        background-color: #13151a;
        border-radius: 8px;
    }

    #read-more > a {
        display: flex;
        justify-content: center;
        text-decoration: none;
        color: white;
        width: 100%;
    }

    .press-heading {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 2rem;
        margin-top: 0;
        color: white;
    }

    .article-header {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 0.5rem;
    }

    .article-title {
        font-size: 1.8rem;
        font-weight: 600;
        line-height: 1.3;
        margin: 0 0 0.75rem 0;
        color: white;
    }

    .article-meta {
        display: flex;
        gap: 1.5rem;
        align-items: center;
        font-size: 0.9rem;
        color: #aaa;
    }

    .author {
        font-weight: 500;
    }

    .date {
        opacity: 0.8;
    }

    .article-meta::before {
        content: '';
        display: block;
        width: 30px;
        height: 2px;
        background: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250));
        margin-right: 0.5rem;
    }
</style>

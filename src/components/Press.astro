    .article-cover {
        max-height: calc(65vh + 2rem);
    }
    .zigzag-cutter {
        clip-path: polygon(0% 100%, 8.33% 0%, 16.67% 100%, 25% 0%, 33.33% 100%, 41.67% 0%, 50% 100%, 58.33% 0%, 66.67% 100%, 75% 0%, 83.33% 100%, 91.67% 0%, 100% 100%, 100% 100%, 0% 100%);
    }
}


---
import Navbar from "../components/Navbar.astro";

interface Props {
    title: string;
    img: string;
}

const { title, img } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />

        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="https://i.imgur.com/qFU5sBq.png" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
        <title>{title}</title>
        <meta property="og:title" content={title} />
        <meta property="og:image" content={img} />
        <meta property="og:description" content="Read article on News++">
        <meta property="og:url" content={Astro.url.href} />
    </head>
    <body>
        <Navbar
            title="news++"
            authors={[
                {
                    name: "R3lish0",
                    github_uri: "https://github.com/R3lish0",
                    profile_pic_uri:
                        "https://avatars.githubusercontent.com/u/43016438?v=4",
                },
                {
                    name: "stickyfingies",
                    github_uri: "https://github.com/stickyfingies",
                    profile_pic_uri:
                        "https://avatars.githubusercontent.com/u/11356884?v=4",
                },
            ]}
        />
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }
    html {
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: #13151a;
        background-size: 224px;
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>
